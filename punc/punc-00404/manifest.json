            "annotations": [
                {
                    "id": "https://digitalscholarship.brynmawr.edu/pta/punc/punc-00404/canvas/1/page/p1",
                    "type": "AnnotationPage",
                    "items": [
                        {
                            "id": "https://digitalscholarship.brynmawr.edu/pta/punc/punc-00404/canvas/1/3e8e2452-9738-4e23-b5c6-208cf477c886",
                            "type": "Annotation",
